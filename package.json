  },
  "devDependencies": {
    "@tsconfig/node24": "24.0.4",
    "@types/node": "24.1.0",
    "esbuild": "^0.25.10",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-pkg": "^0.21.2",
    "typescript": "5.9.3"
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
